<div class="jumbotron">
  <h1 class="display-4">Full Stack Burger Application</h1>
  <p class="lead">This is a simple application to create burgers, keep track of them, thier prices, and if they've been
    purchased.
  </p>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="form-group">
          <label for="product">Burger Name:</label>
          <input type="text" class="form-control" id="product">
        </div>
        <div class="form-group">
          <label for="quantity">Quantity:</label>
          <input type="number" class="form-control" id="quantity">
        </div>
        <div class="form-group">
          <label for="cost">Price:</label>
          <input type="number" class="form-control" id="cost">
        </div>
        <button type="submit" class="btn btn-primary" id="addGrocery">Add Burger!</button>
      </form>
    </div>
  </div>

  <br></br>

  <div class="row">
    <div class="col-md-6">
      <ul id="notPurchased" class="list-group">
        <h2>Not Purchased</h2>
        {{#each groceries}}
        {{#unless this.purchased}}
        <li id="{{this.id}}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{this.name}}</h5>
          </div>
          <p class="mb-1">Quantity: {{this.quantity}}</p>
          <small>Price: ${{this.cost}}</small>
          <button class="purchase" id="purchase">Purchase</button>
        </li>

        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <ul id="purchased" class="list-group">
        <h2>Purchased</h2>
        {{#each groceries}}
        {{#if this.purchased}}
        <li id="{{this.id}}" class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{this.name}}</h5>
          </div>
          <p class="mb-1">Quantity: {{this.quantity}}</p>
          <small>Price: ${{this.cost}}</small>
          <button class="remove" id="unpurchase">Remove</button>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>